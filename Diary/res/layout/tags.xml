<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White_ish" >

    <ViewSwitcher
        android:id="@+id/change_greeting"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="true"
        android:fitsSystemWindows="true"
        android:isScrollContainer="true" >

        <LinearLayout
            android:id="@+id/parent"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <ListView
                    android:id="@+id/tag_list"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:clipToPadding="false"
                    android:paddingBottom="5dp"
                    android:paddingLeft="@dimen/sideMargin"
                    android:paddingRight="@dimen/sideMargin"
                    android:paddingTop="5dp"
                    android:divider="#00000000"
                            android:dividerHeight="3dp"
                    android:scrollbarStyle="insideOverlay" >
                </ListView>

                <ImageView
                    android:id="@+id/add_button"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="bottom|end"
                    android:layout_marginBottom="40dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/round_background"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="newEntry"
                    android:elevation="6dp"
                    android:padding="15dp"
                    android:src="@drawable/white_add_new"
                    android:text="Button" />
            </FrameLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/tags_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/no_tags_toast"
                android:textColor="#333"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="bottom|end"
                android:layout_marginBottom="40dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/round_background"
                android:clickable="true"
                android:focusable="true"
                android:onClick="newEntry"
                android:padding="15dp"
                android:src="@drawable/white_add_new"
                android:text="Button" />
        </FrameLayout>
    </ViewSwitcher>

    <ListView
        android:id="@+id/tags_left_drawer"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:background="@color/Peach"
        android:choiceMode="singleChoice"
        android:clipToPadding="true"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:fitsSystemWindows="true"
        android:paddingBottom="2dp"
        android:paddingLeft="1dp"
        android:elevation="16dp"
        android:paddingRight="1dp"
        android:paddingTop="2dp" />

</android.support.v4.widget.DrawerLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/UIBlue"
    android:id="@+id/markup"
    android:elevation="8dp"
    android:paddingLeft="@dimen/sideMargin"
    android:orientation="horizontal"
    android:paddingRight="@dimen/sideMargin"
              android:weightSum="5"
    android:layout_height="40dp"
    >


    <ImageButton
        android:id="@+id/delete"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?android:selectableItemBackground"
        android:onClick="deleteClicked"
        android:src="@drawable/white_discard"
        android:textSize="22sp" />
        <Button
            android:id="@+id/button2"
            style="@style/pearl_button"
            android:layout_marginRight="5dp"
            android:background="?android:selectableItemBackground"
            android:onClick="boldButtonClicked"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="B"
            android:textColor="@color/UILightForeground"
            android:textSize="16sp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:background="?android:selectableItemBackground"
            android:onClick="italicButtonClicked"
            android:text="I"
            android:layout_marginLeft="5dp"
            android:textColor="@color/UILightForeground"
            android:textSize="16sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/button4"
            android:layout_marginRight="5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:selectableItemBackground"
            android:onClick="underlineButtonClicked"
            android:layout_marginLeft="5dp"
            android:text="U"
            android:textColor="@color/UILightForeground"
            android:textSize="16sp" />


    <ImageButton
        android:id="@+id/accept"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?android:selectableItemBackground"
        android:onClick="saveButtonClicked"
        android:src="@drawable/white_accept"
        android:textSize="22sp" />

</LinearLayout>